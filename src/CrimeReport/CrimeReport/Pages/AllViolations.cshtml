@page
@model CrimeReport.Pages.AllViolationsModel

@{
    ViewData["Title"] = "AllViolations";
}

<h1>AllViolations</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Violation[0].PartionKey)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Violation[0].TypeOfCrime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Violation) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PartionKey)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeOfCrime)
            </td>
            <td>
                <a asp-page="./EditViolation" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./ViolationDetails" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
