@page
@model CrimeReport.Pages.CreateViolationModel
@using CrimeReport.Models;

@{
    ViewData["Title"] = "CreateViolation";
}

<h1>CreateViolation</h1>
@{
    string id = new Identifier().New();
}
<h4>Violation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Violation.Id" class="control-label"></label>
                <input asp-for="Violation.Id" class="form-control" value="@id" />
                <span asp-validation-for="Violation.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Violation.TypeOfCrime" class="control-label"></label>
                <select asp-for="Violation.TypeOfCrime" class="form-control" asp-items="Html.GetEnumSelectList<Models.Enums.TypeOfCrime>()"></select>
                <span asp-validation-for="Violation.TypeOfCrime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
